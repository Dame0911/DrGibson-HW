public class Product{
   private int batch;
   private String code;
   private String date;
   private int indexDateBegins;
   private String plant;
   
   
   public Product(String code){
   this.code = code;
   this.batch = extractBatch(code);
   this.date = extractDate(code);
   this.plant = extractPlant(code);
   
   
    }
    
    public String getCode(){
      return code;
    }
    public int getBatch(){
      return batch;
    }
    public String getDate(){
      return date;
    }
    public String getPlant(){
      return plant;
    }
    
    
    
    
    
   public String extractPlant(String code){
        String exPlant;
       if(Character.isLetter(code.charAt(2))){
          exPlant = code.substring(0,3);
          return exPlant;
       }else{
          exPlant = code.substring(0,2);
          return exPlant;
      }
    }

   public String extractDate(String code){
       String exDate;
       
       if(Character.isLetter(code.charAt(2))){
          exDate = code.substring(3,11);
       } 
       else{
          exDate = code.substring(2,10);
       }return exDate;
    }
    
    public int extractBatch(String code){
       int exBatch = 0;
       if(Character.isLetter(code.charAt(2))){ 
          exBatch = Integer.parseInt(code.substring(11));
          return exBatch;
       }
       else{
          exBatch = Integer.parseInt(code.substring(10));
          return exBatch;
       }
         
    }
    
    
    public String toString(){
         String msg = "Code=" + getCode() + ", plant=" + getPlant() + ", Date=" + getDate() + ", Batch=" + getBatch(); 
         return msg;
    }
         
//       
//    
//    
   
   
   public static void main(String[]args){
      Product p = new Product("VLD040419367");
      System.out.print(p);
      
      
   }


}

